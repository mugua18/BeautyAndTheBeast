<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="野獸需要在最後一片花瓣掉落前解除魔法"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginBottom="16dp"/>

        <!-- 開始倒數按鈕 -->
        <Button
            android:id="@+id/btnStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="啟動倒數"
            android:backgroundTint="#00008B"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp"/>

        <!-- 花瓣水平排列 -->
        <LinearLayout
            android:id="@+id/petalRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp">

            <ImageView
                android:id="@+id/petal1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/rose" />

            <ImageView
                android:id="@+id/petal2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/rose" />

            <ImageView
                android:id="@+id/petal3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/rose" />

            <ImageView
                android:id="@+id/petal4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/rose" />

            <ImageView
                android:id="@+id/petal5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/rose" />
        </LinearLayout>

        <!-- 提示文字 -->

        <!-- 分隔線 -->
        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="與貝兒做些什麼吧！"
            android:textColor="#333333"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="10dp"
            android:background="#CCCCCC" />

        <!-- 四個橫向選項按鈕 -->
        <LinearLayout
            android:id="@+id/buttonGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:weightSum="4">

            <Button
                android:id="@+id/btnGiveFlower"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="送花給貝兒"
                android:backgroundTint="#FFD700"
                android:textColor="#000000" />

            <Button
                android:id="@+id/btnDinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="邀請吃晚餐"
                android:backgroundTint="#FFD700"
                android:textColor="#000000" />

            <Button
                android:id="@+id/btnChat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="與貝兒聊天"
                android:backgroundTint="#FFD700"
                android:textColor="#000000" />

            <Button
                android:id="@+id/btnDance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="邀請跳舞"
                android:backgroundTint="#FFD700"
                android:textColor="#000000" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
